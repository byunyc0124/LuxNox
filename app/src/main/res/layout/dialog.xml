<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewForPoster"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/cofferOpenBtn"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/st1_cofferpw"
            android:backgroundTint="#00ff0000"
            android:clickable="true"/>
        <ImageView
            android:id="@+id/cofferKey"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/st1_key"
            android:clickable="true"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/cofferFirstBtn"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="70dp"
            android:clickable="true"
            android:text="0"
            android:textSize="70dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/cofferSecondBtn"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginTop="239dp"
            android:layout_marginLeft="155dp"
            android:clickable="true"
            android:text="0"
            android:textSize="70dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/cofferThirdBtn"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginTop="238dp"
            android:layout_marginLeft="243dp"
            android:clickable="true"
            android:text="0"
            android:textSize="70dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:visibility="invisible"/>

    </FrameLayout>


</LinearLayout>